{
    "version": 2,
    "name": "spend-wise",
    "builds": [
       {    
            "src": "server/server.js", 
            "use": "@vercel/node" 
        },
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "client/build"
            }
        }
    ],
    "routes": [
       { 
            "src": "/(.*)", 
            "dest": "server/server.js" 
        }
    ]
 }